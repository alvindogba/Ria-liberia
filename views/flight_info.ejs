<!--The airline serve in Monrovia and table starts here-->
<section class="container pb-4">
<div class="pt-4 ">
  <h3 class="">Airlines Serving Robert International Airport</h3>
 
  <p class="">Serveral daily flights comes Monrovia with other capitals of the sub-region and international flight allow passenger traffic between Europe, Middle East and other contients, directly with a connection.</p>
</div>
<div class="">
  <div class="">
     <div class=""><i class="fa-solid fa-phone-volume table_label_icon"></i>
    <p class="">Airlines flying from/to Monrovia Robert airport (updated weekly)</p>
  </div>
  
  <section class="container">
    <table  class="table table-striped table-bordered table-hover table-sm text-center">
      <!-- The table head starts here -->
      <thead class="thead-dark">
        <tr>
          <th>Airline</th>
          <th>Code (IATA)</th>
          <th>Code (ICAO)</th>
          <th>Website</th>
        </tr>
      </thead>
      <!-- The table head ends here -->
      <tbody>
        <% airlineLib.forEach(airline => { %>
          <tr>
            <td><%= airline.airline.name %></td>
            <td><%= airline.airline.iata || 'N/A' %></td>
            <td><%= airline.airline.icao || 'N/A' %></td>
            <td>
              <% if (airline.website) { %>
                <a href="<%= airline.website %>" target="_blank"><%= airline.website %></a>
              <% } else { %>
                N/A
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    </section>

</div>
</div>


</section>
