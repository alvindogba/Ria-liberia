        <!-- ========================================================================
         DIV THAT HAVE THE SEARCH BAR HAND BURGER MENU AND THE EMAIL AND CONTACT MENU
         =============================================================================
          -->
         <div class="search_handburger_email_contact_container">
          <section class="logo_searchbar_handburgermenu_flex_container d-flex justify-content-between align-items-center m-2">
            <!-- SEARCH BAR CONTAINER -->
             <div class="container-fluid d-flex justify-content-evenly align-items-center">
                <form action="" class="search_bar_form d-flex align-items-center" role="search">
                    <input type="search" name="Search" class="header-input form-control me-2" placeholder="Search" aria-label="Search"/>
                      <i class="fa-solid fa-magnifying-glass"></i>
                    
                  </form>
               

                  <!-- =========================================
                  FLAG CONTAINER
                   ================================= -->
                   <div class="flag_container">
                    <P>Liberia</P>
                    <img src="Images/liberia-flag-icon.png" class="Liberia_flag_icon" alt="Liberia Flag Icon">
                  </div>

