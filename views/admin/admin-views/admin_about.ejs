<!-- Header -->
<%- include('admin-partials/admin-header') %>

<!-- Sidebars -->
<%- include('admin-partials/admin-sidebar') %>

<main id="main" class="main min-vh-100">

  <div class="pagetitle">
    <h1>About Us</h1>
    <nav class="d-flex justify-content-between align-items-center">
      <div class="breadcrumb mb-0"> <!-- Removed margin-bottom -->
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
      </div>
  
      <div class="bs-example">
          <!-- Button HTML (to Trigger Modal) -->
          <a href="#myModal" role="button" class="btn bg-lg btn-outline-primary" data-bs-toggle="modal">&plus; About Content</a>
          
        <!-- Modal HTML -->
        <div id="myModal" class="modal fade" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Add Content On The About Page</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <!-- Form starts here -->
              <form action="/ad_about_form" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="row">
                    <div class="col-12">
                      <div class="mb-3">
                        <label class="form-label">Label</label>
                        <input type="text" class="form-control" name="label" required>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="mb-3">
                        <label class="form-label">Image</label>
                        <input type="file" class="form-control" name="image" accept="image/*">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control" name="content" required></textarea>
                      </div>
                    </div>
                  </div>
                  <!-- Remove 'created_at' field -->
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary">Add About Content</button>
                </div>
              </form>
              <!-- Form ends here -->
            </div>
          </div>
        </div>

      </div>
  </nav>
  
  </div><!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <% ab_content.forEach(function(content) { %>
          <div class="col-lg-6">

            <div class="card" style="max-width: 500px;">
              <div class="row g-0">
                  <div class="col-sm-5">
                    <% if (content.image) { %>
                      <img src="data:<%= content.photoType %>;base64,<%= content.image.toString('base64') %>" alt="Image">
                  <% } %>
                  </div>
                  <div class="col-sm-7">
                      <div class="card-body">
                          <h5 class="card-title"><%= content.label ? content.label : 'No Label Provided' %></h5>
                          <p class="card-text"><%= content.content ? content.content : 'No Content Available' %></p>

                          <a href="#" class="btn btn-primary stretched-link">Edit Content</a>
                          <div class="bs-example">
                            <!-- Button HTML (to Trigger Modal) -->
                            <a href="#myModal" role="button" class="btn bg-lg btn-outline-primary" data-bs-toggle="modal">&plus; About Content</a>
                            
                          <!-- Modal HTML -->
                          <div id="myModal" class="modal fade" tabindex="-1">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title">Add Content On The About Page</h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <!-- Form starts here -->
                                <form action="/ad_about_form" method="POST" enctype="multipart/form-data">
                                  <div class="modal-body">
                                    <div class="row">
                                      <div class="col-12">
                                        <div class="mb-3">
                                          <label class="form-label">Label</label>
                                          <input type="text" class="form-control" name="label" required>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-12">
                                        <div class="mb-3">
                                          <label class="form-label">Image</label>
                                          <input type="file" class="form-control" name="image" accept="image/*">
                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-12">
                                        <div class="mb-3">
                                          <label class="form-label">Content</label>
                                          <textarea class="form-control" name="content" required></textarea>
                                        </div>
                                      </div>
                                    </div>
                                    <!-- Remove 'created_at' field -->
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Add About Content</button>
                                  </div>
                                </form>
                                <!-- Form ends here -->
                              </div>
                            </div>
                          </div>
                  
                        </div>
                        
                          <% 
                              // Use 'updated_at' from the database instead of the server's current date
                              let displayDateTime = content.updated_at ? new Date(content.updated_at).toLocaleString() : null;
                          %>
                        
                        <a href="#" class="btn btn-primary stretched-link"><%= displayDateTime ? displayDateTime : 'No Updated Date Available' %></a>
                      
                      </div>
                  </div>
              </div>
          </div>
             
        </div>
      <% }) %>
  </div>


  </section>

</main><!-- End #main -->

  <!-- FOOTER -->
  <%- include('admin-partials/admin-footer') %>